{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "baseUrl": ".",
    "paths": {
      "/*": ["./src/*"]
    },
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "plugins": [
      { 
        "name": "typescript-plugin-css-modules",
      }
    ],
  },
  "include": ["assets.d.ts", "src/**/*"],
  "exclude": ["node_modules", ".cache", "dist"]
}
